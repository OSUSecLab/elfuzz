{
	"name": "elmfuzz-dev",
    "dockerComposeFile": "./docker-compose.yaml",
	"service": "elmfuzz-dev",

	"customizations": {
        "vscode": {
            "extensions": [
				"GitHub.copilot",
				"eamodio.gitlens",
				"Gruntfuggly.todo-tree",
                "donjayamanne.python-extension-pack",
                "ms-azuretools.vscode-docker",
                "formulahendry.docker-explorer",
                "p1c2u.docker-compose",
                "timonwong.shellcheck",
                "jnoortheen.xonsh",
                "MatthewNespor.vscode-color-identifiers-mode",
                "oderwat.indent-rainbow",
                "Swellaby.rust-pack"

                // "zoma.vscode-auto-open-workspace"
			],
            "settings": {
                "python.defaultInterpreterPath": "/home/appuser/venv/bin/python"
                // "autoOpenWorkspace.enableAutoOpenAlwaysFirst": true,
            }
        }
    },

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "appuser",
    "workspaceFolder": "/home/appuser/elmfuzz"
}
